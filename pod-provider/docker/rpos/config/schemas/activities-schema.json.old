{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Activities",
  "type": "object",
  "properties": {
    "@context": {
      "type": "string",
      "format": "uri",
      "description": "Context for formatting of object (e.g. \"https://www.w3.org/ns/activitystreams\")"
    },
    "type": {
      "type": "string",
      "description": "Type of activity"
    },
    "id": {
      "type": "string",
      "format": "uri",
      "description": "URI of the activity described by this object"
    },
    "actor": {
      "type": "string",
      "format": "uri",
      "description": "URI of the actor of whom created this object"
    },
    "content": {
      "type": "string",
      "description": "Content of the activity"
    },
    "tag": {
      "type": "array",
      "description": "Array of tags associated with this object",
      "properties": {
        "type": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string"
        }
      }
    }
  },
  "required": ["@context", "type", "id", "actor"],
  "additionalProperties": false
}
